<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.simplilearn.workshop.model.User" table="USERS">
		<id name="id" type="int">
			<column name="ID" />
			<generator class="identity" />
		</id>

		<property name="name">
			<column name="NAME" />
		</property>

		<component name="proteinData">
			<property name="total">
				<column name="TOTAL" />
			</property>

			<property name="goal">
				<column name="GOAL" />
			</property>
		</component>
	</class>

</hibernate-mapping>